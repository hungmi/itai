<div class="row">
	<div class="col-lg-12 col-md-12 col-xs-12">
		<ul class="breadcrumb">
			<i class="fa fa-angle-double-right"></i>
		  <li><%#= link_to @product.brand.name, brand_path(@product.brand.id) %><%= link_to @product.category.name, category_path(@product.category.id) %></li>
		  <li class="active"><%= @product.title %></li>
		</ul>
	</div>
	<%= render 'partials/sidebar' %> 
	<div class="col-lg-9 col-md-9 col-xs-9">
		<h2 class="category-name-title"><%= @product.title %></h2>
		<div class="topic-underline"></div>
		<div class="product-show">
			<%= image_tag(@product.image) %><br/>
				<% comment do %>
					<% if !@product.tags.blank? %>
						<h4 class="label label-primary"><%= @product.tags %></h4>
					<% end %>
				<% end %>
			<div class="well">
        <%= render partial:'partials/productInfo', locals: {product: @product} %>
			</div>

			<% if !@product.description.blank? %>
				<div style="text-align:center; padding:0px 50px;">
					<h3 style="border-bottom:1px solid black;padding-bottom:5px;">Description</h3>
					<%= simple_format(@product.description) %>
				</div>
			<% end %>
		
			<% comment do %>
			<% if check_if_lineitem_exist(@product.id) %>
				<%= link_to 'Inquiried', inquirylist_path(current_inquirylist), class:'btn btn-default', id:'inquiried-btn' %>
			<% else %>
				<%= link_to 'Inquiry', line_items_path(product_id: @product), method: :post,class:'btn btn-warning' %>
			<% end %>
			<% end %>
		
		</div>
	</div>
</div>