<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to '義臺人造花', root_path, class:'navbar-brand navbar-sm-brand' %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <%= link_to '義臺人造花', root_path, class:'navbar-brand navbar-lg-brand' %>
          <li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to raw('<i class="fa fa-envelope"></i> Contact'), contact_path %></li>
          <li class="dropdown <%= 'active' if params[:controller] == "categories" %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Categories <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% @categories = Category.all %>
              <% @categories.each do |category| %>
              <li><%= link_to category.name, category_path(category) %></li>
              <% end %>
            </ul>
          </li>
          <li class="dropdown <%= 'active' if params[:controller] == "brands" %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Brands <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% @brands = Brand.all %>
              <% @brands.each do |brand| %>
              <li><%= link_to brand.name, brand_path(brand) %></li>
              <% end %>
            </ul>
          </li>
          <li class="<%= 'active' if current_page?(about_path) %>"><%= link_to 'About', about_path %></li>
          

          <% comment do %>
          <%if signed_in?%>            
              <li class="pull-right"><%=link_to "Logout", destroy_customer_session_path, method: :delete%></li>
              <li class="pull-right"><%=link_to "Edit account", edit_customer_registration_path%></li>
              <%if current_inquirylist %>
                <li class="pull-right">
                  <%=link_to inquirylist_path(current_inquirylist.id) do %>
                    <i class="fa fa-list-alt"></i> Inquiry List (<%= how_many_lineitems %>)
                  <% end %>
                </li>
              <% end %>
          <% else %>            
              <li class="pull-right"><%=link_to "Sign up", new_customer_registration_path%></li>
              <li class="pull-right"><%=link_to "Login", new_customer_session_path%></li>   
          <% end %>
          <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>